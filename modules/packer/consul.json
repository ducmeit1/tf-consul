{
  "min_packer_version": "1.6.3",
  "variables": {
    "project_id": "driven-stage-269911",
    "zone": "asia-east1-c",
    "consul_version": "1.8.4"
  },
  "builders": [
    {
      "name": "ubuntu-1804-lts",
      "type": "googlecompute",
      "image_name": "consul-ubuntu1804-lts-{{uuid | clean_resource_name}}",
      "image_family": "consul",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-1804-lts",
      "zone": "{{user `zone`}}",
      "ssh_username": "ubuntu"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir -p /tmp/terraform-consul"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo mkdir -p /opt/gruntwork",
        "git clone --branch v0.1.3 https://github.com/ducmeit1/bash-commons.git /tmp/bash-commons",
        "sudo cp -r /tmp/bash-commons/modules/bash-commons/src /opt/gruntwork/bash-commons"
      ]
    },
    {
      "type": "file",
      "sources": [
        "{{template_dir}}/../install-consul/install-consul",
        "{{template_dir}}/../run-consul/run-consul",
        "{{template_dir}}/tls"
      ],
      "destination": "/tmp/terraform-consul/"
    },
    {
      "type": "file",
      "source": "{{template_dir}}/../install-dnsmasq/install-dnsmasq",
      "destination": "/tmp/terraform-consul/"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mkdir -p /opt/consul",
        "sudo mkdir -p /opt/consul/tls",
        "sudo mkdir -p /opt/dnsmasq",
        "sudo mv /tmp/terraform-consul/install-consul /opt/consul/",
        "sudo mv /tmp/terraform-consul/run-consul /opt/consul/",
        "sudo mv /tmp/terraform-consul/install-dnsmasq /opt/dnsmasq/",
        "sudo chmod a+x /opt/consul/install-consul",
        "sudo chmod a+x /opt/consul/run-consul",
        "sudo chmod a+x /opt/dnsmasq/install-dnsmasq"
      ],
      "pause_before": "5s"
    },
    {
      "type": "ansible",
      "playbook_file": "{{template_dir}}/../ansible/install.yml",
      "pause_before": "10s"
    },
    {
      "type": "shell",
      "inline": ["sudo rm -rf /tmp/bash-commons", "sudo rm -rf /tmp/terraform-consul"]
    }
  ]
}
