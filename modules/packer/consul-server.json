{
  "min_packer_version": "1.6.3",
  "variables": {
    "project_id": "driven-stage-269911",
    "zone": "asia-east1-c",
    "consul_version": "1.8.4",
    "consul_tmp_terraform": "/tmp/terraform-consul",
    "consul_ca_cert_path": "{{template_dir}}/tls/ca/ca.pem",
    "consul_server_cert_path": "{{template_dir}}/tls/server/cert.pem",
    "consul_server_key_path": "{{template_dir}}/tls/server/key.pem",
    "gcp_account_file": "{{template_dir}}/credentials.json"
  },
  "builders": [
    {
      "type": "googlecompute",
      "image_name": "consul-server-{{uuid | clean_resource_name}}",
      "image_family": "consul",
      "project_id": "{{user `project_id`}}",
      "source_image": "debian-9-stretch-v20200805",
      "source_image_family": "debian-9",
      "zone": "{{user `zone`}}",
      "ssh_username": "packer",
      "ssh_password": "packer",
      "account_file": "{{user `gcp_account_file`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get update -y",
        "sudo apt-get install -y git zip unzip curl jq"
      ]
    }
    ,{
      "type": "shell",
      "inline": [
        "mkdir -p {{user `consul_tmp_terraform`}}"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo mkdir -p /opt/gruntwork",
        "git clone --branch v0.1.3 https://github.com/ducmeit1/bash-commons.git /tmp/bash-commons",
        "sudo cp -r /tmp/bash-commons/modules/bash-commons/src /opt/gruntwork/bash-commons"
      ]
    },
    {
      "type": "file",
      "sources": [
        "{{template_dir}}/../install-consul",
        "{{template_dir}}/../run-consul",
        "{{template_dir}}/../install-dnsmasq"
      ],
      "destination": "{{user `consul_tmp_terraform`}}/"
    },
    {
      "type": "file",
      "sources": [
        "{{user `consul_ca_cert_path`}}",
        "{{user `consul_server_cert_path`}}",
        "{{user `consul_server_key_path`}}"
      ],
      "destination": "{{user `consul_tmp_terraform`}}/tls/"
    },
    {
      "type": "shell",
      "inline": [
        "sudo chmod a+x {{user `consul_tmp_terraform`}}/install-consul/install-consul",
        "sudo chmod a+x {{user `consul_tmp_terraform`}}/run-consul/run-consul",
        "sudo chmod a+x {{user `consul_tmp_terraform`}}/install-dnsmasq/install-dnsmasq"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "{{template_dir}}/../ansible/main.yml",
      "user": "packer",
      "pause_before": "5s"
    },
    {
      "type": "shell",
      "inline": [
        "sudo rm -rf /tmp/bash-commons",
        "sudo rm -rf /tmp/terraform-consul"
      ]
    }
  ]
}
