{
  "min_packer_version": "1.6.3",
  "variables": {
    "project_id": "driven-stage-269911",
    "zone": "asia-east1-c",
    "consul_version": "1.8.4",
    "consul_ca_cert_path": "{{template_dir}}/tls/ca/ca.pem",
    "consul_client_cert_path": "{{template_dir}}/tls/client/cert.pem",
    "consul_client_key_path": "{{template_dir}}/tls/client/key.pem"
  },
  "builders": [
    {
      "name": "ubuntu-1804-lts",
      "type": "googlecompute",
      "image_name": "consul-client-v184-{{uuid | clean_resource_name}}",
      "image_family": "consul",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-1804-lts",
      "zone": "{{user `zone`}}",
      "ssh_username": "consul"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir -p /tmp/terraform-consul",
        "mkdir -p /tmp/terraform-consul/tls"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo mkdir -p /opt/gruntwork",
        "git clone --branch v0.1.3 https://github.com/ducmeit1/bash-commons.git /tmp/bash-commons",
        "sudo cp -r /tmp/bash-commons/modules/bash-commons/src /opt/gruntwork/bash-commons"
      ]
    },
    {
      "type": "file",
      "sources": [
        "{{template_dir}}/../install-consul",
        "{{template_dir}}/../run-consul",
        "{{template_dir}}/../install-dnsmasq"
      ],
      "destination": "/tmp/terraform-consul/"
    },
    {
      "type": "file",
      "sources": [
        "{{user `consul_ca_cert_path`}}",
        "{{user `consul_client_cert_path`}}",
        "{{user `consul_client_key_path`}}"
      ],
      "destination": "/tmp/terraform-consul/tls/"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mkdir -p /opt/consul",
        "sudo mkdir -p /opt/dnsmasq",
        "sudo mkdir -p /opt/consul/tls",
        "sudo mv /tmp/terraform-consul/install-consul /opt/consul/",
        "sudo mv /tmp/terraform-consul/run-consul /opt/consul/",
        "sudo mv /tmp/terraform-consul/install-dnsmasq /opt/dnsmasq/",
        "sudo mv /tmp/terraform-consul/tls /opt/tls/",
        "sudo chmod a+x /opt/consul/install-consul",
        "sudo chmod a+x /opt/consul/run-consul",
        "sudo chmod a+x /opt/dnsmasq/install-dnsmasq",
        "sudo chown -R consul:consul /opt/consul",
        "sudo chown -R consul:consul /opt/dnsmasq"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "{{template_dir}}/../ansible/install.yml",
      "extra_arguments": ["-vvvv"]
    },
    {
      "type": "shell",
      "inline": [
        "sudo rm -rf /tmp/bash-commons",
        "sudo rm -rf /tmp/terraform-consul"
      ]
    }
  ]
}
